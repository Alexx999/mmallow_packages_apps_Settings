    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:minHeight="@dimen/fan_temp_dialog_gridview_child_min_height"
    android:minWidth="@dimen/fan_temp_dialog_gridview_child_min_width"
    android:orientation="horizontal"  >
    <ImageView
	android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:textSize="@dimen/fan_temp_dialog_gridview_child_text_size"
	android:textColor="@color/fan_temp_dialog_gridview_child_text_color" />
</LinearLayout>
